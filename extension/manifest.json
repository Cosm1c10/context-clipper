{
  "manifest_version": 3,
  "name": "Context Clipper",
  "version": "1.0",
  "description": "Save context to Gemini and chat with it.",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
