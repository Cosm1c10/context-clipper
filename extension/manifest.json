{
  "manifest_version": 3,
  "name": "Context Clipper",
  "version": "2.0",
  "description": "Save context from the web and inject it into ChatGPT, Claude, and Gemini.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8001/*",
    "https://*.vercel.app/*",
    "https://*.onrender.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"]
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["config.js", "injector.js"]
    }
  ],
  "commands": {
    "save-clip": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Save selected text to Context Bridge"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Open Context Bridge Dashboard"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
